{
  "compilerOptions": {
    "target": "es2018", /* Target latest ECMAScript standard */
    "module": "ESNext", /* Use ECMAScript modules */
    "moduleResolution": "node",
    "esModuleInterop": true, /* Allow default imports from modules with CommonJS */
    "strict": true, /* Enable all strict type-checking options */
    "forceConsistentCasingInFileNames": true, /* Ensure consistent file casing */
    "skipLibCheck": true, /* Skip type checking all .d.ts files */
    // "sourceMap": true, /* Generate source maps */
    // "outDir": "./dist", /* Specify an output directory for compiled files */
  },
  "include": [
    "src/**/*.ts"
  ], /* Specify the root folder within your source files. */
  "exclude": [
    "node_modules"
  ] /* Exclude the node_modules folder. */
}